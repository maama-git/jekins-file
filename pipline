pipeline {
    agent any

    environment {
        NAME = "naama"
    }
options{
  timeout(time:1,unit:'SECONDS' )
}

    stages {
        stage("stage number one") {
            steps {
                sleep time:15,unit:'SECONDS'
                echo "Avital & Rachely"
                echo "Hello ${NAME}"
                echo "build number: ${env.BUILD_NUMBER}"
            }
        }

        stage("stage number two") {
            steps {
                echo "hi everyone"
            }
        }
    }
} 
